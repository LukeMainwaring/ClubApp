
<p id="notice"><%= notice %></p>

<h1 align="center" style="font-size:50px">Calendar</h1>

<li><a class="btn signup-button form-button" href=<%=new_meeting_path %>>New Meeting</a></li>

<%= month_calendar events: @meetings do |date, meetings| %>
  <%= date.to_s[5...10] %>

  <% meetings.each do |meeting| %>
    <div>
      <%= meeting.name %>
      <%= meeting.start_time.to_s[10... -4] %>
    </div>
  <% end %>
<% end %>

