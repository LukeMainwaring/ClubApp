
<p id="notice"><%= notice %></p>

<h1 align="center" style="font-size:50px">Club Announcements</h1>
<style>
th, td{
    font-size: 20px;
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}
</style>

<% if @user.position == 'President' || @user.position == 'Vice President' || @user.position == 'Social Chair'%>
  <a align="center" class="btn signup-button form-button" href='announcements/new'>New Announcement</a>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Announcement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.name %></td>
        <td><%= announcement.announcement %></td>
        <td><a class="btn signup-button form-button" href=<%='announcements/' + announcement.id.to_s%>>Show</a></td>
        <% if announcement.creator_id == session[:user_id].to_s %>
          <td><a class="btn signup-button form-button" data-method="delete" href=<%='announcements/' + announcement.id.to_s%>>Destroy</a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

