
<p id="notice"><%= notice %></p>

<h1 align="center" style="font-size:50px">Club Members</h1>

<style>

th, td{
    font-size: 20px;
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

</style>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Position</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstName + ' ' + user.lastName%></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.position %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>